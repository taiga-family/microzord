{
    "name": "angular",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/angular/src",
    "prefix": "",
    "tags": [],
    "targets": {
        "build": {
            "executor": "@nx/angular:package",
            "options": {
                "tsConfig": "libs/{projectName}/tsconfig.lib.json",
                "project": "libs/{projectName}/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "libs/{projectName}/tsconfig.lib.prod.json"
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectName}"],
            "options": {
                "jestConfig": "libs/{projectName}/jest.config.ts",
                "coverageDirectory": "coverage/{projectName}"
            }
        },
        "prepublish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cp ./LICENSE ./README.md ./dist/libs/{projectName}"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish ./dist/libs/{projectName} --ignore-scripts"
            },
            "dependsOn": [
                {
                    "target": "prepublish",
                    "params": "ignore",
                    "dependencies": false
                }
            ]
        }
    }
}
